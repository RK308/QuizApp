<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="textViewStyle">
        <item name="android:layout_marginEnd">@dimen/textViewLayoutMarginEnd</item>
        <item name="android:layout_marginStart">@dimen/textViewLayoutMarginStart</item>
        <item name="android:layout_marginTop">@dimen/textViewLayoutMarginTop</item>
        <item name="android:textSize">@dimen/textViewTextSize</item>
    </style>
</resources>
